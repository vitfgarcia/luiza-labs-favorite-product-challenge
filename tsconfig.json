{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "outDir": "dist",
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noUnusedLocals": true
  },
  "compileOnSave": false,
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}